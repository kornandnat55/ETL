create or replace view d_department_ora11_v
as select d.department_id as department_cd, d.department_name as department_name, l.street_address as street_address, l.postal_code as postal_code, l.city as city, l.state_province as state_province, c.country_name as country_name, r.region_name as region_name_en,
case when r.region_name = 'Europe' then 'ยุโรป'
     when r.region_name = 'Americas' then 'อเมริกา'
     when r.region_name = 'Asia' then 'เอเชีย'
     when r.region_name = 'Middle East and Africa' then 'ตะวันออกกลางและแอฟริกา'
     end region_name_th
from departments d join locations l 
on d.location_id = l.location_id
join countries c 
on l.country_id = c.country_id
join regions r
on c.region_id = r.region_id;
